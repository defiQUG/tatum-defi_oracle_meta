# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/defi-oracle-meta
MONGODB_TEST_URI=mongodb://localhost:27017/defi-oracle-meta-test

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-secret-key
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_FROM=noreply@defi-oracle-meta.com
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your-smtp-username
EMAIL_PASSWORD=your-smtp-password

# Web3 Configuration
WEB3_PROVIDER_URL=http://102.133.148.122:8545
CHAIN_ID=138
NETWORK_NAME=Defi Oracle Meta Mainnet

# Security
ALLOWED_ORIGINS=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
PASSWORD_RESET_TOKEN_EXPIRES_IN=600000

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# API Keys
COINGECKO_API_KEY=your-coingecko-api-key
TATUM_API_KEY=your-tatum-api-key

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_RATE_LIMITING=true
ENABLE_API_VERSIONING=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key